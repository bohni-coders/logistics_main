<div class="fleetbase-pagination">
    <div class="flex justify-between flex-1 sm:hidden">
        <a href="#" class="direction-button {{if this.cannotStepBackward "disabled"}}" disabled={{this.cannotStepBackward}} tabindex="-1" aria-label="Previous" {{on "click" (fn this.incrementPage -1)}}>
            Previous
        </a>
        <a href="#" class="ml-3 direction-button {{if this.cannotStepForward "disabled"}}" disabled={{this.cannotStepForward}} aria-label="Next" {{on "click" (fn this.incrementPage 1)}}>
            Next
        </a>
    </div>
    <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
        <div>
            <p class="text-sm leading-5 text-gray-700 pagination-showing">
                Showing
                <span class="font-medium">
                    {{this.from}}
                </span>
                to
                <span class="font-medium">
                    {{this.to}}
                </span>
                of
                <span class="font-medium">
                    {{this.totalResults}}
                </span>
                results
            </p>
        </div>
        <div class="flex items-center justify-end">
            {{#if @isLoading}}
                <div class="flex items-center justify-center mr-2">
                    <Ui::Spinner @iconClass="text-sky-500 fa-spin-800ms" />
                </div>
            {{/if}}
            <span class="relative z-0 inline-flex shadow-sm">
                <button type="button" class="page-item-arrow {{if this.cannotStepBackward "disabled"}}" disabled={{this.cannotStepBackward}} {{on "click" (fn this.incrementPage -1)}}>
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                </button>

                {{#each this.pageItems as |item|}}
                    <button type="button" class="page-item {{if item.current "active"}}" disabled={{or item.active item.dots}} {{on "click" (fn this.goToPage item.page)}}>
                        {{#if item.dots}}
                            <span>
                                ...
                            </span>
                        {{else}}
                            {{item.page}}
                        {{/if}}
                    </button>
                {{/each}}

                <button type="button" class="page-item-arrow {{if this.cannotStepForward "disabled"}}" disabled={{this.cannotStepForward}} {{on "click" (fn this.incrementPage 1)}}>
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                    </svg>
                </button>
            </span>
        </div>
    </div>
</div>