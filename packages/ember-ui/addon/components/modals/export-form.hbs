<Modal::Default @modalIsOpened={{@modalIsOpened}} @options={{@options}} @confirm={{@onConfirm}} @decline={{@onDecline}} as |options|>
    <div class="modal-body-container">
        <div class="input-group">
            <label>
                Format
            </label>
            <Select @value={{@options.format}} @options={{@options.formatOptions}} @placeholder="Select export format..." @onChange={{@options.setFormat}} class="w-full" />
        </div>
    </div>
</Modal::Default>