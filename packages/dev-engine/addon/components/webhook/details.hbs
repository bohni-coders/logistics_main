<div class="content-panel" ...attributes>
    <div class="content-panel-header">
        <div class="flex items-center">
            <h3 class="mr-4 text-xl font-bold dark:text-gray-100">
                Webhook details
            </h3>
        </div>

        <div class="flex items-center section-header-actions">
            <Button @icon="pencil" @text="Update details..." @onClick={{this.onClickUpdateWebhook}} />
        </div>
    </div>
    <div class="text-sm content-panel-body">
        <table class="border-none table-fixed dark:text-gray-100 table-spaced-y-2 table-cells-valign-top">
            <tbody>
                <tr>
                    <td class="w-40">
                        URL
                    </td>
                    <td>
                        {{n-a @webhook.url}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Description
                    </td>
                    <td>
                        {{n-a @webhook.description}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Event Types
                    </td>
                    <td>
                        {{#if @webhook.is_listening_on_all_events}}
                            <Badge @status="warning" @hideStatusDot={{true}} @helpText="You will receive webhooks for new event types as they are added, except for those that require explicit selection. Listening for all event types is usually not necessary and may increase load on your servers.">
                                <FaIcon @icon="exclamation-triangle" />
                                <span class="ml-2">
                                    All Events
                                </span>
                            </Badge>
                        {{else}}
                            {{@webhook.eventTypes}}
                        {{/if}}
                    </td>
                </tr>
                <tr>
                    <td>
                        API Credential
                    </td>
                    <td>
                        {{#if @webhook.receivingFromAllApiCredentials}}
                            <Badge @status="warning" @hideStatusDot={{true}} @helpText="You will receive webhooks callbacks regardless what API Credential is used to trigger the event.">
                                <FaIcon @icon="exclamation-triangle" />
                                <span class="ml-2">
                                    Receiving from all API Credentials
                                </span>
                            </Badge>
                        {{else}}
                            {{@webhook.api_credential_name}}
                        {{/if}}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>